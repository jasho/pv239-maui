<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:c="clr-namespace:CookBook.Mobile.Converters"
             xmlns:styles="clr-namespace:CookBook.Mobile.Resources.Styles" 
             x:Class="CookBook.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <styles:ButtonStyle />
                <styles:PickerStyle />
                <styles:ContentPageStyle />
                <styles:EditorStyle />
                <styles:EntryStyle />
                <styles:LabelStyle />
                <styles:DarkTheme />
            </ResourceDictionary.MergedDictionaries>

            <c:FoodTypeToColorConverter x:Key="FoodTypeToColorConverter" />
            <c:FoodTypeToIconConverter x:Key="FoodTypeToIconConverter" />
            <c:FoodTypeToStringConverter x:Key="FoodTypeToStringConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
