<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:PV239_02_Design.Resources;assembly=PV239_02_Design"
             x:Class="PV239_02_Design.TodoItemView"
             Title="{x:Static resources:Texts.TodoItemPage_Title}"
             Style="{StaticResource PrimaryPageStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TableView Grid.Row="0">
            <TableSection>
                <EntryCell Label="{x:Static resources:Texts.TodoItem_Name_Label}"/>
                <SwitchCell Text="{x:Static resources:Texts.TodoItem_Completed_Label}"/>
            </TableSection>
        </TableView>
        <StackLayout Grid.Row="1"
                     HorizontalOptions="End"
                     Orientation="Horizontal"
                     Spacing="0">
            <Button Style="{StaticResource DeleteButtonStyle}"
                    HorizontalOptions="End"/>
            <Button Style="{StaticResource PrimaryButtonStyle}"
                    Text="💾"
                    HorizontalOptions="End"/>
        </StackLayout>
    </Grid>
</ContentPage>