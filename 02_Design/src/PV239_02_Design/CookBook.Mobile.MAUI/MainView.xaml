<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:texts="clr-namespace:CookBook.Mobile.MAUI.Resources.Texts;assembly=CookBook.Mobile.MAUI"
             x:Class="CookBook.Mobile.MAUI.Views.MainView">
    <VerticalStackLayout Spacing="10"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
        <Button Text="{x:Static texts:MainViewTexts.Ingredients_Button_Text}"
                Clicked="IngredientsButton_OnClicked"
                Style="{StaticResource PrimaryButtonStyle}" />

        <Button Text="{x:Static texts:MainViewTexts.Recipes_Button_Text}"
                Style="{StaticResource PrimaryButtonStyle}" />
    </VerticalStackLayout>
</ContentPage>