<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:CookBook.Mobile.Views;assembly=CookBook.Mobile"
                       xmlns:recipe="clr-namespace:CookBook.Mobile.Core.ViewModels.Recipe;assembly=CookBook.Mobile.Core"
                       xmlns:texts="clr-namespace:CookBook.Mobile.Resources.Texts;assembly=CookBook.Mobile"
                       x:Class="CookBook.Mobile.Views.Recipe.RecipeEditView"
                       x:DataType="recipe:RecipeEditViewModel"
                       x:Name="Root"
                       Title="{Binding Item.Name}">
    <Grid RowDefinitions="Auto, Auto, *, 80" ColumnDefinitions="Auto, *">
        <Label Grid.Row="0" Grid.Column="0"
               Text="{x:Static texts:RecipeEditViewTexts.Name_Label_Text}"
               VerticalOptions="Center"/>
        <Entry Grid.Row="0" Grid.Column="1"
               Text="{Binding Item.Name}"/>

        <Label Grid.Row="1" Grid.Column="0"
               Text="{x:Static texts:RecipeEditViewTexts.ImageUrl_Label_Text}"
               VerticalOptions="Center"/>
        <Entry Grid.Row="1" Grid.Column="1"
               Text="{Binding Item.ImageUrl}"/>

        <Label Grid.Row="2" Grid.Column="0"
               Text="{x:Static texts:RecipeEditViewTexts.Description_Label_Text}"
               VerticalOptions="Start"/>
        <Editor Grid.Row="2" Grid.Column="1"
                Text="{Binding Item.Description}"/>

        <Button Grid.Row="3"
                Grid.Column="0" Grid.ColumnSpan="2"
                Margin="10"
                Text="{x:Static texts:RecipeEditViewTexts.Save_Button_Text}"
                Command="{Binding SaveCommand}"
                Style="{StaticResource PrimaryButtonStyle}"/>
    </Grid>
</views:ContentPageBase>