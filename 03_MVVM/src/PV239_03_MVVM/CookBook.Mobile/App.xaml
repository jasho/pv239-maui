<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:c="clr-namespace:CookBook.Mobile.Converters"
             x:Class="CookBook.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/DarkTheme.xaml" />

                <ResourceDictionary Source="Resources/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/ContentPageStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/LabelStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <c:FoodTypeToColorConverter x:Key="FoodTypeToColorConverter" />
            <c:FoodTypeToIconConverter x:Key="FoodTypeToIconConverter" />
            <c:FoodTypeToStringConverter x:Key="FoodTypeToStringConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
